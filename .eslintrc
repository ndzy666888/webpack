{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier"],
  "plugins": ["react", "import", "prettier"],
  "globals": {
    "window": "off",
    "document": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": 0,
    "no-plusplus": 0,
    "no-unused-vars": 0,
    "prettier/prettier": 2,
    "import/no-unresolved": [0, { "commonjs": true }],
    "import/prefer-default-export": 0,
    "import/extensions": [
      0,
      {
        "ts": "always"
      }
    ],
    "react/jsx-filename-extension": [1, { "extensions": [".tsx"] }]
  },
  "ignorePatterns": ["webpack.config.js"]
}
